{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "bun",
			"internalConsoleOptions": "neverOpen",
			"request": "launch",
			"name": "Debug Program",
			"program": "${workspaceFolder}/index.ts",
			"cwd": "${workspaceFolder}",
			"stopOnEntry": false,
			"watchMode": false
		},
		{
			"type": "bun",
			"internalConsoleOptions": "neverOpen",
			"request": "launch",
			"name": "Run Program",
			"program": "${workspaceFolder}/index.ts",
			"cwd": "${workspaceFolder}",
			"noDebug": true,
			"watchMode": true
		},
		{
			"type": "bun",
			"internalConsoleOptions": "neverOpen",
			"request": "launch",
			"name": "Debug File",
			"program": "${file}",
			"cwd": "${workspaceFolder}",
			"stopOnEntry": false,
			"watchMode": false
		},
		{
			"type": "bun",
			"internalConsoleOptions": "neverOpen",
			"request": "launch",
			"name": "Run File",
			"program": "${file}",
			"cwd": "${workspaceFolder}",
			"noDebug": true,
			"watchMode": true
		}
	]
}
